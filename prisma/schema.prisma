// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  nome      String
  email     String
  senha     String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("usuarios")
}

model Clientes {
  id          String    @id @default(uuid())
  nome        String
  celular     String
  fixo        String
  cpf_cnpj    String
  rg_ie       String
  rua         String
  bairro      String
  cidade      String
  estado      String
  complemento String
  create_at   DateTime? @default(now())
  update_at   DateTime? @default(now())

  @@map("clientes")
}

model Produtos {
  id         String    @id @default(uuid())
  nome       String
  preco      String
  fornecedor String
  quantdade  String
  create_at  DateTime? @default(now())
  update_at  DateTime? @default(now())

  @@map("produtos")
}
